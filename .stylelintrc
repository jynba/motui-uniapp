{
  "defaultSeverity": "error",
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss",
    "stylelint-config-recommended-vue"
  ],
  "rules": {
    "unit-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "::v-deep",
          "deep",
          "v-deep"
        ],
        "ignoreUnits": ["rpx"]
      }
    ]
  },
  "ignoreFiles": [
    "node_modules",
    "dist",
    "public",
    "output",
    "coverage",
    "temp",
    "styles/iconfont",
    "*.js",
    "*.cjs",
    "*.mjs",
    "*.ts",
    "*.tsx",
    "*.svg",
    "*.gif",
    "*.md",
    "*"
  ]
}